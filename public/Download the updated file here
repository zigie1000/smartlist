<script>
  
  function saveLicense() {
    const key = document.getElementById("licenseInput").value.trim();
    if (!key) return alert("‚ùå Please enter a license key.");

    localStorage.setItem("licenseKey", key);

    fetch("/validate-license", {
      headers: { "x-license-key": key }
    })
      .then(res => res.json())
      .then(data => {
        window.userTier = data.tier || "free";
        updateFeatureAccess();
        removeUpgradePrompt();
        alert("‚úÖ License saved. Access updated.");
      })
      .catch(() => {
        alert("‚ùå Invalid or failed license check.");
      });
  }


  function removeUpgradePrompt() {
    const prompt = document.querySelector("body > div");
    if (prompt && prompt.innerHTML.includes("Upgrade to Pro")) {
      prompt.remove();
    }
  }


document.addEventListener("DOMContentLoaded", function() {
  const storedKey = localStorage.getItem("licenseKey");
  if (storedKey) {
    fetch('/validate-license', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ key: storedKey })
    })
    .then(res => res.json())
    .then(data => {
      if (data && data.valid) {
        window.userTier = data.userTier;
        updateFeatureAccess();
      }
    });
  }
});


document.addEventListener("DOMContentLoaded", function () {
  checkTierAndAdjustUI();
});

</script>

