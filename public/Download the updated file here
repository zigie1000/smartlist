function updateFeatureAccess() {
  console.log("üì° updateFeatureAccess triggered. Current tier:", window.userTier);
  document.querySelectorAll(".pro-feature").forEach(btn => {
    if (window.userTier === "free") {
      btn.disabled = true;
      btn.style.opacity = 0.5;
      btn.onclick = () => alert("üö´ Upgrade to Pro to use this feature.");
    } else {
      btn.disabled = false;
      btn.style.opacity = 1;
      btn.onclick = null;
    }
  });

  document.querySelectorAll(".premium-feature").forEach(btn => {
    if (window.userTier !== "premium") {
      btn.disabled = true;
      btn.style.opacity = 0.5;
      btn.onclick = () => alert("üö´ Upgrade to Premium to use this feature.");
    } else {
      btn.disabled = false;
      btn.style.opacity = 1;
      btn.onclick = null;
    }
  });
}

window.addEventListener("load", checkTierAndAdjustUI);

  function removeUpgradePrompt() {
    const prompt = document.querySelector("body > div");
    if (prompt && prompt.innerHTML.includes("Upgrade to Pro")) {
      prompt.remove();
    }
  }


document.addEventListener("DOMContentLoaded", function() {
  const storedKey = localStorage.getItem("licenseKey");
  if (storedKey) {
    fetch('/validate-license', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ key: storedKey })
    })
    .then(res => res.json())
    .then(data => {
      if (data && data.valid) {
        window.userTier = data.userTier;
        updateFeatureAccess();
      }
    });
  }
});

